{% extends 'templates/app.twig' %}

{% block title %}Error: 500 | BSHARA{% endblock %}

{% block contents %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Error: 500</h1>
        <small>Server scripting error (ERROR: 500)</small>
        <!--GUIDANCE MAPPER (TOP RIGHT)-->
        <ol class="breadcrumb">
            <li><a href="{{ path_for('home') }}"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Error: 500</li>
        </ol>
        <!--END OF GUIDANCE MAPPER-->
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="error-page">
            <h2 class="headline text-yellow"> 500</h2>

            <div class="error-content">
                <h3><i class="fa fa-warning text-yellow"></i> Oops! Something went wrong.</h3>

                <p>
                    Something went wrong with our servers and / or scripts.<br/>
                    You may try to <a href="{{ path_for('home') }}">return Home</a>.
                </p>
                <br/>
                <img src="{{ base_url() }}/img/500.jpg" align="left">
            </div>
            <!-- /.error-content -->
        </div>
    </section>
    <!-- /.content -->
    </div>
{% endblock %}
